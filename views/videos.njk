
{% extends "layout.njk" %}

    {% block head %}
    <title>Odilon Lima | Videos</title>
        <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    {% endblock %}

    {% block content %}
    <!-- PRESENTATION -->
            <div class="wrapper">
            <h1>Meus videos favoritos</h1>
            </div>

            <section class="cards">

                {% for card in videos %}

                    <div class="card" id="{{card.id}}">
                        <div class="image-videos">
                            <img src="https://img.youtube.com/vi/{{card.id}}/maxresdefault.jpg" alt="{{card.title}}">
                            {% if card.featured %}
                            <div class="featured">Featured</div>
                            {% endif %}
                        </div>

                        <div class="video-content">
                            <p>{{card.title}}</p>
                        </div>

                        <div class="video-information">
                            <p>{{card.duration}}</p>
                            <p class="card-price">{{card.price}}</p>
                        </div>
                    </div> 
                {% endfor %}
            </section>

            <!-- MODAL -->
            <div class="modal-overlay">
                <div class="modal">
                    <a class="close-modal">
                        <i class="material-icons">close</i>
                    </a>

                <div class="modal-content">
                    <iframe src="" frameborder="0"></iframe>
                </div>
                </div>
            </div>

            <!-- FOOTER -->
            <div class="links footer">
            <!-- Github -->
            <a href="https://github.com/OdilonLimaNeto" target="blank">
            <img src="/assets/github.png" alt="Github"></a>

            <!-- Facebook -->
            <a href="https://www.facebook.com/profile.php?id=100009148764045" target="blank">
                <img src="/assets/facebook.png" alt=" Facebook"></a>

            <!-- LinkedIn -->
            <a href="https://www.linkedin.com/in/odilonlimaneto/" target="blank">
                <img src="/assets/linkedIn.png" alt=" LinkedIn"></a>     
            </div>
        <script src="/scripts.js"></script>
    {% endblock %}
    